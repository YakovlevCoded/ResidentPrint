			var slideNum ="";			$(document).ready(function(){

				slideNum = parseInt(slideNum);
				if (slideNum > 0) { 
					slideNum = slideNum - 1;
					$("#promo-slider").trigger("to.owl.carousel", [slideNum, 1, true]);
				};
				
			});
